{
  "name": "scatterbush",
  "version": "1.0.0",
  "description": "Elysia backend and Next.js frontend monorepo",
  "private": true,
  "scripts": {
    "dev": "nx run-many -t serve",
    "build": "nx run-many -t build",
    "test": "nx run-many -t test",
    "lint": "nx run-many -t lint",
    "docker:up": "docker compose --profile all up -d",
    "docker:down": "docker compose --profile all down",
    "docker:up:apps": "docker compose --profile apps up -d",
    "docker:up:infra": "docker compose --profile infra up -d",
    "docker:down:volumes": "docker compose --profile all down -v",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.19.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nx/js": "^21.6.3",
    "@types/node": "^20.19.17",
    "husky": "^9.1.7",
    "nx": "^21.5.3"
  },
  "dependencies": {
    "motion": "^12.23.24"
  }
}
