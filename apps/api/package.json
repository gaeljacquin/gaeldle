{
  "name": "@scatterbush/api",
  "version": "1.0.2-dev",
  "description": "Scatterbush API built with Elysia and Bun",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "clean": "rm -rf dist node_modules/.cache",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "better-auth": "^1.3.27",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "elysia": "latest",
    "pg": "^8.16.3",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@types/pg": "^8.15.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "main": "dist/index.js",
  "module": "dist/index.js"
}
