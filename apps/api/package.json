{
  "name": "@gaeldle/api",
  "version": "1.0.2-dev",
  "description": "Gaeldle API built with Elysia and Bun",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:node": "bun build src/index.ts --outdir ./dist --target node --minify --external pg --external sharp --external @google/generative-ai --external @supabase/supabase-js",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "clean": "rm -rf dist node_modules/.cache",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/node": "^1.4.3",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.93.3",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.22",
    "jose": "^6.1.3",
    "pg": "^8.18.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.8",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "main": "dist/index.js",
  "module": "dist/index.js"
}
