{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["SERVER_URL", "STACK_SECRET_SERVER_KEY"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": ["src/**/*.ts", "src/**/*.spec.ts", "tsconfig.json"]
    },
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
